{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",

    "baseUrl": "./",
    "outDir": "lib",
  },
  "exclude": [
    "node_modules",
  ]
}
